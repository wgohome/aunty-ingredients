<div class="inner-container my-3">
  <div class="row justify-content-between">
    <div class="col-4">
      <%= link_to listing_path(order.listing) do  %>
        <%= "#{order.listing.name.capitalize}"%>
      <% end %>
      (<%= order.listing.description %>)
    </div>
    <%= form_for(order) do |f| %>
      <div class="col-4">
        <%= f.number_field :quantity_ordered, {min: 0, max: order.listing.quantity_available} %>
      </div>
      <div class="col-2">
          <%= f.submit "Update cart" %>
      </div>
    <% end %>
    <div class="col-2">
      <% price = order.listing.listing_price_pq * order.quantity_ordered %>
      <%= number_to_currency(price) %>
    </div>
    <div class="col">
      <%= link_to "Delete", order_path(order), method: :delete, data: {confirm: "Are you sure?"} %>
     </div>
    <br>
  </div>
</div>
